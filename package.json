{
  "name": "haa-nai-hang",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:test": "vite --port 5174 --strictPort",
    "prebuild": "node scripts/gen-build-info.mjs",
    "build": "vite build",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "fix": "npm run lint -- --fix && prettier -w .",
    "preview": "vite preview",
    "seed": "node scripts/seed-firestore.js",
    "seed:test": "node scripts/seed-test-data.js",
    "deploy:rules": "node scripts/deploy-firestore-rules.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:pptr:smoke": "node tests/pptr/smoke.js",
    "add-stores": "node scripts/add-stores.js",
    "check-data": "node scripts/check-data-structure.js",
    "enhance-search-data": "node scripts/enhance-search-data.js",
    "migrate-stores": "node scripts/migrate-stores-to-subcollections.mjs",
    "migrate-stores:dry-run": "node scripts/migrate-stores-to-subcollections.mjs --dry-run",
    "migrate-stores:verify": "node scripts/migrate-stores-to-subcollections.mjs verify",
    "cleanup-firestore": "tsx scripts/cleanup-firestore.ts",
    "depcheck": "depcheck",
    "tsprune": "ts-prune",
    "cleanup": "npm run lint && npm run depcheck && npm run tsprune",
    "lh:mobile": "lighthouse ${BASE_URL:-https://hanaihang.netlify.app} --preset=perf --output=json --output=html --output-path=./artifacts/lh-mobile --timeout=120000 --max-wait-for-load=60000 --wait-for-load=5000 --chrome-flags='--headless --no-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor'",
    "lh:desktop": "lighthouse ${BASE_URL:-https://hanaihang.netlify.app} --preset=desktop --output=json --output=html --output-path=./artifacts/lh-desktop --timeout=120000 --max-wait-for-load=60000 --wait-for-load=5000 --chrome-flags='--headless --no-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor'",
    "pa11y": "pa11y-ci -c .pa11yci.json",
    "qa:ci": "npm run lh:mobile && npm run lh:desktop && npm run pa11y && playwright test",
    "import:malls": "node scripts/import-malls.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.85.5",
    "@types/leaflet": "^1.9.20",
    "@types/lodash": "^4.17.20",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "leaflet": "^1.9.4",
    "lodash": "^4.17.21",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.8.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "lint-staged": "^16.1.6",
    "netlify-cli": "^23.5.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "puppeteer": "^24.17.0",
    "tailwindcss": "^3.3.6",
    "ts-prune": "^0.10.3",
    "typescript": "^5.9.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,md}": [
      "prettier -w"
    ]
  }
}
