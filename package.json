{
  "name": "haa-nai-hang",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "seed": "node scripts/seed-firestore.js",
    "deploy:rules": "node scripts/deploy-firestore-rules.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "lh:mobile": "lighthouse ${BASE_URL:-https://hanaihang.netlify.app} --preset=desktop --output=json --output-path=./artifacts/lh-mobile.json --timeout=60000 --max-wait-for-load=30000 --chrome-flags='--headless --no-sandbox --disable-dev-shm-usage'",
    "lh:desktop": "lighthouse ${BASE_URL:-https://hanaihang.netlify.app} --preset=desktop --output=json --output-path=./artifacts/lh-desktop.json --timeout=60000 --max-wait-for-load=30000 --chrome-flags='--headless --no-sandbox --disable-dev-shm-usage'",
    "pa11y": "pa11y-ci -c .pa11yci.json",
    "qa:ci": "npm run lh:mobile && npm run lh:desktop && npm run pa11y && playwright test"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tanstack/react-query": "^5.85.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4"
  }
}
